<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <title>User Profile</title>
  </head>
  <style>
    body{
      text-transform: uppercase;
    }
  </style>
  <body style="margin:60px 20px;">
    <h1 style="text-align: center;font-size: 60px;margin-bottom: 20px;border-bottom: 2px solid black">User Profile</h1>
    <div style="display: flex;justify-content: center;">
      <div style="padding:20px 20px;width:500px;box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;background-color: #ffdd00">
      <div style="display:flex;justify-content:center">
        <img style="width:100px;height:100px" src='User_Assets/images/profile.gif'>
      </div>
      <div>
        <h1 style="text-align: center;color:white"><span style="font-size: 20px;color:black;border-bottom: 1.5px solid black">First Name : </span><span style="margin-left:10px;font-size: 25px;"><%= user.firstname %></span></h1>
        <h1 style="text-align: center;;color:white"><span style="font-size: 20px;color:black;border-bottom: 1.5px solid black">Last Name : </span><span style="margin-left:10px;font-size: 25px"><%= user.lastname %></span></h1>
        <h1 style="text-align: center;;color:white"><span style="font-size: 20px;color:black;border-bottom: 1.5px solid black">Email : </span><span style="margin-left:10px;font-size: 25px;text-transform: lowercase;"><%= user.username %></span></h1>
        <h1 style="text-align: center;;color:white"><span style="font-size: 20px;color:black;border-bottom: 1.5px solid black">Contact : </span><span style="margin-left:10px;font-size: 25px"><%= user.contact %></span></h1>
        <h1 style="text-align: center;;color:white"><span style="font-size: 20px;color:black;border-bottom: 1.5px solid black">Country : </span><span style="margin-left:10px;font-size: 25px"><%= user.country %></span></h1>
      </div>
      
    </div>
    </div>
    

    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>

   
  </body>
</html>
